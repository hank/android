<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Layout"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <TextView
        android:id="@+id/timeline_status"
        style="@style/TimelineRow.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.Layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/timeline_user"
            style="@style/TimelineRow.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/timeline_timestamp"
            android:paddingRight="2dp" />

        <TextView
            android:id="@id/timeline_timestamp"
            style="@style/TimelineRow.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>